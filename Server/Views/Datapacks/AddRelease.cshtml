@model Server.Models.DatapackVersionModel

@{
    ViewData["Title"] = "AddRelease";
}

<form asp-action="AddRelease" enctype="multipart/form-data" asp-route-id="@ViewData["id"]">
	<div class="row">
		<div class="col s12 m8 input-field">
			<label asp-for="Name"></label>
			<input asp-for="Name" />
		</div>
		<div class="col s12 m4">
			<label asp-for="PreRelease"></label>
			<div class="switch">
				<label>
					Off
					<input asp-for="PreRelease">
					<span class="lever"></span>
					On
				</label>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col s12 input-field">
			<label asp-for="Notes"></label>
			<textarea class="materialize-textarea" asp-for="Notes"></textarea>
		</div>
	</div>
	<div class="row">
		<div class="col s12">
			<label>Files</label>
			<input type="file" name="file" id="file" />
		</div>
	</div>
	<div class="row">
		<div class="col s12 input-field">
			<input type="submit" class="btn" value="Publish!" />
		</div>
	</div>
</form>